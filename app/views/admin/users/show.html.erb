<div class="container-fluid w-50 shadow mt-5 rounded border p-4 bg-dark">
  <div class="text-light">
    <div class="row">
      <div class="col-4">
        <%= render 'admin/users/profile_pic' %>
      </div>
      <div class="col-8">
        <h3>User_id: <%= @user.id %></h3>
        <p> User Name: <%= @user.username %></p>
        <p> Email: <%= @user.email %></p>
