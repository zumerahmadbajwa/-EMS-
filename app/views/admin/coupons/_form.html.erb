<div class="container-fluid w-50 shadow mt-5 rounded border p-4 bg-dark" >
  <h2 class= "text-light"> New Coupon </h2>
  <%= form_for [:admin, @coupon] do |f| %>
    <div class="fform-outline mb-4 text-light">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, required: true, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="form-outline mb-4 text-light">
      <%= f.label :price, class: "form-label" %>
      <%= f.text_field :price, required: true, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="dropdown field mb-3 text-start text-light">
      <%= f.label :select_product, class: "form-label" %><br />
      <%= f.select :products, options_for_select(Product.all.map {|key| [key.title, key.id]}), {}, class: "form-control form-select" %>
    </div>

    <%= f.submit "Create Coupon", class: 'actions mb-2 text-dark btn btn-warning mt-3' %>
  <% end %>
</div>
